{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "AzureSqlTableforDataFlow",
						"type": "DatasetReference"
					},
					"name": "source1",
					"script": "source(allowSchemaDrift: false,\n\tvalidateSchema: true,\n\tformat: 'table') ~> source1"
				}
			],
			"transformations": [
				{
					"name": "Aggregate1",
					"script": "source1 aggregate() ~> Aggregate1"
				}
			]
		}
	}
}